
$include /etc/inputrc

$if Bash
    "\e[5~": history-search-backward
    "\e[6~": history-search-forward

    "\ei": "\C-a\C-]\ \C-wls\C-e"
    "\eI": "\C-als \C-e"

    "\eo": "\C-a\C-]\ \C-wless\C-e"
    "\eO": "\C-aless \C-e"

    "\ev": "\C-a\C-]\ \C-wvim\C-e"
    "\eV": "\C-avim \C-e"

    "\ex": "\C-a\C-]\ \C-wxdg-open\C-e"
    "\eX": "\C-axdg-open \C-e"

    "\em": "\C-aman \C-]\ \C-k\n"
    "\es": "\C-asudo \C-e"
$endif

$if Python
    "\ei": "\C-adir(\C-e)\n"
    "\em": "\C-ahelp(\C-e)\n"
$endif

"\ee": "\C-a\ed\C-f\C-h\C-e"
